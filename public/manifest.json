{
  "manifest_version": 3,
  "name": "PDF Reader with Marker",
  "version": "0.0.1",
  "version_name": "Beta Release",
  "description": "A simple PDF reader extension that automatically saves your last read page. Continue your reading without losing trackâ€”effortless and convenient!",
  "action": {
    "default_popup": "src/popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "webNavigation"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["*.js", "*.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "<all_urls>",
    "file://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*.pdf", "file:///*/*.pdf"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
