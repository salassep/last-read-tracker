{
  "manifest_version": 3,
  "name": "PDF Reader Extension",
  "version": "1.0",
  "description": "A Chrome extension to view PDF files using React.",
  "permissions": [
    "activeTab",
    "storage",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["*.js", "*.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "<all_urls>",
    "file://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*.pdf", "file:///*/*.pdf"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
